{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "types",
    "removeComments": true,
    // "allowSyntheticDefaultImports": true
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "declaration": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
